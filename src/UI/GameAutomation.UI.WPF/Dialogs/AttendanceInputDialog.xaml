<Window x:Class="GameAutomation.UI.WPF.Dialogs.AttendanceInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NTH Diem Danh Configuration"
        Width="420" Height="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="NTH Diem Danh"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2D3436"
                   Margin="0,0,0,20"/>

        <!-- Effective Date Display -->
        <Border Grid.Row="1" Background="#E8F5E9" CornerRadius="8" Padding="12,10" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ngay hom nay: "
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#2E7D32"/>
                <TextBlock x:Name="EffectiveDateLabel"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#1B5E20"/>
            </StackPanel>
        </Border>

        <!-- Sheet Name -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <TextBlock Text="Sheet Name"
                       FontSize="12"
                       Foreground="#636e72"
                       Margin="0,0,0,6"/>
            <Border Background="White" BorderBrush="#e1e8ed" BorderThickness="2" CornerRadius="8">
                <TextBox x:Name="SheetNameTextBox"
                         BorderThickness="0"
                         Padding="12,10"
                         FontSize="14"
                         Background="Transparent"/>
            </Border>
        </StackPanel>

        <!-- Start Row -->
        <StackPanel Grid.Row="3" Margin="0,0,0,16">
            <TextBlock Text="Start Row (sheet row number, e.g. 2 = first data row)"
                       FontSize="12"
                       Foreground="#636e72"
                       Margin="0,0,0,6"/>
            <Border Background="White" BorderBrush="#e1e8ed" BorderThickness="2" CornerRadius="8">
                <TextBox x:Name="StartRowTextBox"
                         Text="2"
                         BorderThickness="0"
                         Padding="12,10"
                         FontSize="14"
                         Background="Transparent"/>
            </Border>
        </StackPanel>

        <!-- Info -->
        <TextBlock Grid.Row="4"
                   Text="Reads username/password from columns A,B in Google Sheets. Marks attendance in date column."
                   FontSize="11"
                   Foreground="#b2bec3"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button x:Name="CancelButton"
                    Content="Huy"
                    Width="100"
                    Height="44"
                    Margin="0,0,12,0"
                    Background="Transparent"
                    BorderBrush="#e1e8ed"
                    BorderThickness="2"
                    Foreground="#636e72"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Cursor="Hand"
                    Click="CancelButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="OkButton"
                    Content="Bat Dau"
                    Width="140"
                    Height="44"
                    FontWeight="Bold"
                    FontSize="14"
                    Foreground="White"
                    Cursor="Hand"
                    Click="OkButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Padding="16,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#56ab2f" Offset="0"/>
                                    <GradientStop Color="#a8e063" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#56ab2f" Opacity="0.4" BlurRadius="10" ShadowDepth="3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
