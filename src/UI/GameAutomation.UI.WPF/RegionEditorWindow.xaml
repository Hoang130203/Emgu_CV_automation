<Window x:Class="GameAutomation.UI.WPF.RegionEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameAutomation.UI.WPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Region Editor"
        Height="600" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibleConverter"/>
        <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="20,16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="MapMarkerRadius" Width="28" Height="28" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Region Editor" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Configure search regions for templates" FontSize="11" Foreground="White" Opacity="0.85"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Template Tree -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="12">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="16" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Templates" FontSize="14" FontWeight="SemiBold" Foreground="#2D3436" Margin="4,0,0,12"/>

                    <TreeView Grid.Row="1"
                              ItemsSource="{Binding TemplateGroups}"
                              BorderThickness="0"
                              Background="Transparent">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="Padding" Value="2"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                                <!-- Group Header -->
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <materialDesign:PackIcon Kind="FolderOutline" Width="18" Height="18" Foreground="#667eea" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13" Foreground="#2D3436" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Items.Count, StringFormat=' ({0})'}" FontSize="11" Foreground="#95a5a6" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Template Items -->
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="4,6" Margin="0,1" CornerRadius="6" Cursor="Hand"
                                                Background="Transparent"
                                                MouseLeftButtonUp="TemplateItem_Click">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#f0f3f7"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding StatusIcon}"
                                                          FontSize="12"
                                                          Foreground="{Binding StatusColor}"
                                                          VerticalAlignment="Center"
                                                          Width="18"/>
                                                <TextBlock Text="{Binding FileName}"
                                                          FontSize="12"
                                                          Foreground="#2D3436"
                                                          VerticalAlignment="Center"
                                                          TextTrimming="CharacterEllipsis"
                                                          ToolTip="{Binding Key}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Right Panel: Preview & Config -->
            <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="16" ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Selected Template Name -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Selected Template" FontSize="11" Foreground="#95a5a6"/>
                        <TextBlock Text="{Binding SelectedTemplate.Key, FallbackValue='(none selected)'}"
                                  FontSize="15" FontWeight="SemiBold" Foreground="#2D3436"/>
                    </StackPanel>

                    <!-- Preview Image -->
                    <Border Grid.Row="1" Background="#f8f9fa" CornerRadius="8" Margin="0,0,0,12">
                        <Grid>
                            <TextBlock Text="No preview" FontSize="12" Foreground="#b2bec3"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Visibility="{Binding PreviewImage, Converter={StaticResource NullToVisibleConverter}, FallbackValue=Visible}"/>
                            <Image Source="{Binding PreviewImage}"
                                   Stretch="Uniform"
                                   Margin="8"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Grid>
                    </Border>

                    <!-- Region Info -->
                    <Border Grid.Row="2" Background="#f0f3f7" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="Region: " FontSize="12" Foreground="#636e72"/>
                                    <TextBlock Text="{Binding RegionSource}" FontSize="12" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#95a5a6"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RegionSource}" Value="JSON">
                                                        <Setter Property="Foreground" Value="#27ae60"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RegionSource}" Value="Hardcoded">
                                                        <Setter Property="Foreground" Value="#3498db"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <TextBlock Text="{Binding RegionInfo}" FontSize="11" Foreground="#636e72" FontFamily="Consolas"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="ðŸ“ Select"
                                        Command="{Binding SelectRegionCommand}"
                                        Margin="0,0,8,0"
                                        Padding="12,6"
                                        FontSize="12"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#667eea"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="ðŸ—‘"
                                        Command="{Binding DeleteRegionCommand}"
                                        IsEnabled="{Binding CanDeleteRegion}"
                                        Padding="8,6"
                                        FontSize="12"
                                        ToolTip="Delete JSON region (revert to hardcoded)"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#e74c3c"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#bdc3c7"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Instructions -->
                    <Border Grid.Row="3" Background="#fff9e6" CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¡ How to use" FontSize="12" FontWeight="SemiBold" Foreground="#d4a000" Margin="0,0,0,6"/>
                            <TextBlock FontSize="11" Foreground="#7f6000" TextWrapping="Wrap">
                                <Run Text="1. Select a template from the tree"/>
                                <LineBreak/>
                                <Run Text="2. Click 'Select' to define search region"/>
                                <LineBreak/>
                                <Run Text="3. Draw rectangle on game screen"/>
                                <LineBreak/>
                                <Run Text="4. Region auto-saved to JSON config"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Legend -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,12,0,0">
                        <TextBlock Text="âœ“" Foreground="#27ae60" FontSize="12"/>
                        <TextBlock Text=" Has region  " FontSize="11" Foreground="#636e72"/>
                        <TextBlock Text="â—‹" Foreground="#95a5a6" FontSize="12"/>
                        <TextBlock Text=" No region (full screen)" FontSize="11" Foreground="#636e72"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" Padding="16,12" BorderBrush="#e0e0e0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="ðŸ“¥ Import" Command="{Binding ImportJsonCommand}" Margin="0,0,8,0" Padding="14,8" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f8f9fa"/>
                            <Setter Property="Foreground" Value="#2D3436"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#dfe6e9"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1" Content="ðŸ“¤ Export" Command="{Binding ExportJsonCommand}" Padding="14,8" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#f8f9fa"/>
                            <Setter Property="Foreground" Value="#2D3436"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#dfe6e9"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="3" Content="Close" Command="{Binding CloseCommand}" Padding="20,8" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#667eea"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
