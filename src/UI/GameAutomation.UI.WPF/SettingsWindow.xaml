<Window x:Class="GameAutomation.UI.WPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameAutomation.UI.WPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Settings"
        Height="700" Width="550"
        MinHeight="600" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F5F7FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Toggle Switch Style -->
        <Style x:Key="ModernToggle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Background"
                                    Width="50" Height="26"
                                    CornerRadius="13"
                                    Background="#E0E0E0"
                                    HorizontalAlignment="Left"/>
                            <Ellipse x:Name="Thumb"
                                    Width="22" Height="22"
                                    Fill="White"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="4" ShadowDepth="1"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Background" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#667eea" Offset="0"/>
                                            <GradientStop Color="#764ba2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Height="6" CornerRadius="3" Background="#E0E0E0" VerticalAlignment="Center"/>
                            <Border Height="6" CornerRadius="3" HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Width="{TemplateBinding Value}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#667eea" Offset="0"/>
                                        <GradientStop Color="#764ba2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="20" Height="20" Fill="White">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect Color="#667eea" Opacity="0.4" BlurRadius="8" ShadowDepth="2"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Gradient -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="24,20">
            <Border.Effect>
                <DropShadowEffect Color="#667eea" Opacity="0.3" BlurRadius="20" ShadowDepth="5"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Cog" Width="32" Height="32" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Foreground="White">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="5" ShadowDepth="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Configure vision and AI settings" FontSize="12" Foreground="White" Opacity="0.9" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel>
                <!-- Vision Settings Card -->
                <Border Background="White" CornerRadius="16" Padding="20" Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="20" ShadowDepth="4"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="36" Height="36" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#4facfe" Offset="0"/>
                                        <GradientStop Color="#00f2fe" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="Eye" Width="20" Height="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Vision Settings" FontSize="18" FontWeight="Bold" Foreground="#2D3436" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Use Feature Matching Toggle -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Use Feature Matching" FontSize="14" FontWeight="SemiBold" Foreground="#2D3436"/>
                                <TextBlock Text="Better for different scales/colors between machines" FontSize="11" Foreground="#636e72" TextWrapping="Wrap"/>
                            </StackPanel>
                            <ToggleButton Grid.Column="1" Style="{StaticResource ModernToggle}"
                                         IsChecked="{Binding UseFeatureMatching}" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Algorithm Selection -->
                        <StackPanel Margin="0,0,0,16" IsEnabled="{Binding UseFeatureMatching}">
                            <TextBlock Text="Algorithm" FontSize="12" Foreground="#636e72" Margin="0,0,0,6"/>
                            <Border Background="#F8F9FA" BorderBrush="#e1e8ed" BorderThickness="2" CornerRadius="10">
                                <ComboBox ItemsSource="{Binding AvailableAlgorithms}"
                                         SelectedItem="{Binding FeatureAlgorithm}"
                                         BorderThickness="0"
                                         Padding="12,10"
                                         FontSize="13"
                                         Background="Transparent"/>
                            </Border>
                            <TextBlock FontSize="10" Foreground="#b2bec3" Margin="4,4,0,0">
                                <Run Text="ORB: Faster, good for real-time. SIFT: More accurate."/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Min Match Count -->
                        <StackPanel Margin="0,0,0,16" IsEnabled="{Binding UseFeatureMatching}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Min Match Count" FontSize="12" Foreground="#636e72"/>
                                <TextBlock Grid.Column="1" Text="{Binding MinMatchCount}" FontSize="12" FontWeight="SemiBold" Foreground="#667eea"/>
                            </Grid>
                            <Slider Value="{Binding MinMatchCount}" Minimum="4" Maximum="50"
                                   TickFrequency="1" IsSnapToTickEnabled="True"
                                   Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Ratio Threshold -->
                        <StackPanel IsEnabled="{Binding UseFeatureMatching}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Lowe's Ratio Threshold" FontSize="12" Foreground="#636e72"/>
                                <TextBlock Grid.Column="1" Text="{Binding FeatureMatchRatio, StringFormat=F2}" FontSize="12" FontWeight="SemiBold" Foreground="#667eea"/>
                            </Grid>
                            <Slider Value="{Binding FeatureMatchRatio}" Minimum="0.5" Maximum="0.95"
                                   TickFrequency="0.05" IsSnapToTickEnabled="True"
                                   Margin="0,8,0,0"/>
                            <TextBlock FontSize="10" Foreground="#b2bec3" Margin="4,4,0,0">
                                <Run Text="Lower = stricter matching. Recommended: 0.7-0.8"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Detection Settings Card -->
                <Border Background="White" CornerRadius="16" Padding="20" Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="20" ShadowDepth="4"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="36" Height="36" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#f093fb" Offset="0"/>
                                        <GradientStop Color="#f5576c" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="Target" Width="20" Height="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Detection Settings" FontSize="18" FontWeight="Bold" Foreground="#2D3436" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Template Threshold -->
                        <StackPanel Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Template Match Threshold" FontSize="12" Foreground="#636e72"/>
                                <TextBlock Grid.Column="1" Text="{Binding TemplateThreshold, StringFormat=P0}" FontSize="12" FontWeight="SemiBold" Foreground="#f093fb"/>
                            </Grid>
                            <Slider Value="{Binding TemplateThreshold}" Minimum="0.5" Maximum="1.0"
                                   TickFrequency="0.05" IsSnapToTickEnabled="True"
                                   Margin="0,8,0,0"/>
                            <TextBlock FontSize="10" Foreground="#b2bec3" Margin="4,4,0,0">
                                <Run Text="Higher = more strict matching. Recommended: 0.75-0.85"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Screen Capture Interval -->
                        <StackPanel Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Screen Capture Interval" FontSize="12" Foreground="#636e72"/>
                                <TextBlock Grid.Column="1" FontSize="12" FontWeight="SemiBold" Foreground="#f093fb">
                                    <Run Text="{Binding ScreenCaptureIntervalMs}"/><Run Text=" ms"/>
                                </TextBlock>
                            </Grid>
                            <Slider Value="{Binding ScreenCaptureIntervalMs}" Minimum="50" Maximum="1000"
                                   TickFrequency="50" IsSnapToTickEnabled="True"
                                   Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Use Region Search Toggle -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Use Region Search" FontSize="14" FontWeight="SemiBold" Foreground="#2D3436"/>
                                <TextBlock Text="Limit search area using JSON config or hardcoded regions" FontSize="11" Foreground="#636e72" TextWrapping="Wrap"/>
                            </StackPanel>
                            <ToggleButton Grid.Column="1" Style="{StaticResource ModernToggle}"
                                         IsChecked="{Binding UseRegionSearch}" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- AI Settings Card -->
                <Border Background="White" CornerRadius="16" Padding="20" Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.08" BlurRadius="20" ShadowDepth="4"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="36" Height="36" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#667eea" Offset="0"/>
                                        <GradientStop Color="#764ba2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="Brain" Width="20" Height="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="AI Settings" FontSize="18" FontWeight="Bold" Foreground="#2D3436" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- AI Provider -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="AI Provider" FontSize="12" Foreground="#636e72" Margin="0,0,0,6"/>
                            <Border Background="#F8F9FA" BorderBrush="#e1e8ed" BorderThickness="2" CornerRadius="10">
                                <ComboBox ItemsSource="{Binding AvailableAIProviders}"
                                         SelectedItem="{Binding SelectedAIProvider}"
                                         BorderThickness="0"
                                         Padding="12,10"
                                         FontSize="13"
                                         Background="Transparent"/>
                            </Border>
                        </StackPanel>

                        <!-- API Key -->
                        <StackPanel>
                            <TextBlock Text="API Key" FontSize="12" Foreground="#636e72" Margin="0,0,0,6"/>
                            <Border Background="#F8F9FA" BorderBrush="#e1e8ed" BorderThickness="2" CornerRadius="10">
                                <PasswordBox x:Name="ApiKeyBox"
                                            BorderThickness="0"
                                            Padding="12,10"
                                            FontSize="13"
                                            Background="Transparent"/>
                            </Border>
                            <TextBlock FontSize="10" Foreground="#b2bec3" Margin="4,4,0,0">
                                <Run Text="Required for OpenAI or Claude providers"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="White" Padding="24,16" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Command="{Binding CancelCommand}"
                        Content="Cancel"
                        Margin="0,0,12,0"
                        Height="44"
                        Width="100"
                        Background="Transparent"
                        BorderBrush="#636e72"
                        BorderThickness="2"
                        Foreground="#636e72"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F0F0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Save Button -->
                <Button Grid.Column="2"
                        Command="{Binding SaveCommand}"
                        Height="44"
                        Width="120"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#56ab2f" Offset="0"/>
                                        <GradientStop Color="#a8e063" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#56ab2f" Opacity="0.4" BlurRadius="15" ShadowDepth="4"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Save" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
